<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="custom_information_page">
        <page name="custom_information" string="Custom Information">
            <group name="custom_info">
                <field name="custom_info_template_id" />
                <button
                    name="action_reload_custom_info_template"
                    string="Reload Custom Info Template"
                    type="object"
                />
                <button
                    name="action_reload_custom_info"
                    string="Reload Custom Info"
                    type="object"
                />
            </group>
            <group name="detail_info" colspan="4" col="2">
                <field name="custom_info_ids" colspan="4" nolabel="1" />
            </group>
        </page>
    </template>
</odoo>
